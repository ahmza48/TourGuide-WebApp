@{
    Layout = null;
}
@*@model Travel.Models.Photographer
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Hotel</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">Add New Hotel</h2>
                        <h2 class="text-center">@Model</h2>
                        <form method="post" action="/Admin/InsertHotel" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name">Hotel Name:</label>
                                <input name="hotelname" type="text" class="form-control" id="name" required>
                            </div>
                            <div class="form-group">
                                <label for="photo">Hotel Photo:</label>
                                <input name="img" type="file" class="form-control" id="photo" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Owner Name:</label>
                                <input name="ownername" type="text" class="form-control" id="ownername" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Owner Contact:</label>
                                <input name="ownercontact" type="text" class="form-control" id="ownercontact" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Place Name:</label>
                                <input name="placename" type="text" class="form-control" id="placename" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Total Rooms:</label>
                                <input name="rooms" type="number" class="form-control" id="rooms" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Price Per Night:</label>
                                <input name="price" type="number" class="form-control" id="price" required>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Add Hotel</button>
                                <a class="btn btn-secondary" href="/Admin/GoHome">Go Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
