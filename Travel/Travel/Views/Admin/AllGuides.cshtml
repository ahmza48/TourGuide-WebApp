        <script>
            function editGuide(guideId) {
                $.ajax({
                    url: "/Admin/GetGuide",
                    type: "GET",
                    data: { id: guideId },
                    success: function (guide) {
                        $("#guideId").val(guide.id);
                        $("#guideName").val(guide.name);
                        $("#guidePlace").val(guide.placeName);
                        $("#guideContact").val(guide.contact);
                        $("#editGuideModal").modal("show");
                    },
                    error: function () {
                        // Handle error case
                        console.log("Failed to retrieve guide information.");
                    }
                });
            }
        </script>


